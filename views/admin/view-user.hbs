<section>
    <div class="container">
        <div class="row mt-3">
            <a href="/admin/add-user" class="btn btn-success ml-auto">Add User</a>
        </div>
        <table class="table table-striped table-dark mt-5">
  <thead>
    <tr>
      <th scope="col">NO</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Password</th>
      
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">#</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.password}}</td>
      <td>
        <a href="/admin/edit-user/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-user/{{this._id}}" class="btn btn-danger" onclick="return confirm('Delete user{{this.name}}?')">Delete</a>
      
      </td>
      
    </tr>
   {{/each}}
  </tbody>
</table>
    </div>
</section>